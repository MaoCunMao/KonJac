{
    "manifest_version": 2,
    "name": "KonJac",
    "description": "译文加载器 - 译者版",
    "version": "0.1",
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons":{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
    "permissions": [
        "contextMenus",
        "tabs",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "js/jquery.min.js"
    ],
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/jquery.min.js",
            "js/content.js"
        ],
        "run_at": "document_end"
    }]
}